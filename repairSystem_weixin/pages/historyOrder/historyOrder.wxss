/* pages/historyOrder/historyOrder.wxss */
.topBlock{
  padding: 10rpx;
  margin-top: 30rpx;
  margin-left: 150rpx;
  height: 60rpx;
  display: flex;

}
.topBlock-item{
  text-align: center;
  border: 1px solid #ffb765;
  border-radius: 6rpx;
  overflow: hidden;/*文本溢出显示省略号*/
  width: 225rpx;
  color: #ffb765;
  background-color: #fff;
}
.topBlock-item.cell-active{
  background-color: #ffb765;
  color: #ffffff;
}
.tabText{
  vertical-align: middle;/*文字垂直居中*/
}
.cell-hide{
  display: none;
}
.orderBlock{
  background-color: #fff;
  width: 100%;
  height: 220rpx;
  font-size: 28rpx;
  display: flex;
  
  margin: 10rpx 0;
}
.orderText{
  margin-left: 20rpx;
}
.space{
  height: 20rpx;
  width: 100%;
}
.arrowImg{
  width: 60rpx;
  height: 60rpx;
  margin-left: 150rpx;
  margin-top: 85rpx;
}

.ordersBlock{
  width: 100%;
  height: 220rpx;
  background-color: #fff;
  margin: 10rpx 0;
  font-size: 28rpx;
  
}