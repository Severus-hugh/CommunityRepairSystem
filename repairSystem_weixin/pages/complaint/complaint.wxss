.topBlock{
  padding: 10rpx;
  margin-top: 30rpx;
  margin-left: 150rpx;
  height: 60rpx;
  display: flex;

}
.topBlock-item{
  text-align: center;
  border: 1px solid #ffb765;
  border-radius: 6rpx;
  overflow: hidden;/*文本溢出显示省略号*/
  width: 225rpx;
  color: #ffb765;
  background-color: #fff;
}
.topBlock-item.cell-active{
  background-color: #ffb765;
  color: #ffffff;
}
.tabText{
  vertical-align: middle;/*文字垂直居中*/
}
.cell-hide{
  display: none;
}
.comTitle{
  margin: 20rpx 10rpx;
}

.orderBlock{
  width: 100%;
  height: 180rpx;
  background-color: #fff;
  margin: 10rpx 0;
  display: flex;
}
.comText{
  margin-left: 30rpx;
  margin-top: 10rpx;
  font-size: 28rpx;
}
.arrowimg{
  width: 50rpx;
  height: 50rpx;
  margin-left: 280rpx;
  margin-top: 70rpx;
}

.comBlock{
  background-color: #fff;
  width: 100%;
  height: 300rpx;
  margin-top: 20rpx;
}

.compOrdId{
  font-size: 26rpx;
}
.complaintText{
  line-height: 80rpx;
}
.lineImg{
